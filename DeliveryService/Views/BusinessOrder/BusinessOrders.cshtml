<script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
<script src="@ConfigurationManager.AppSettings["SignalRServerUrl"]:@ConfigurationManager.AppSettings["SignalRServerPort"]/signalr/hubs"></script>
<script>
    function showNearestDriverOnMap(data) {
        var driverLoc = {
            lat: data.DriverLat,
            lng: data.DriverLong
        };
        window.initMapAndShowDriver(driverLoc, 14, data);
    }
</script>
<script>
    $.connection.hub.url = "@ConfigurationManager.AppSettings["SignalRServerUrl"]:@ConfigurationManager.AppSettings["SignalRServerPort"]/signalr";
    $.connection.hub.qs = "ClientBusinessId=-@Html.Raw(ViewBag.BusinessId)";

    // Declare a proxy to reference the hub.
    var hub = $.connection.addRiderHub;

    // show driver when found one
    hub.client.notifyBusinessAboutDriver = function (data) {
        showNearestDriverOnMap(data);
    };

    hub.client.closeDriverAcceptModal = function() {
        $("#acceptRejectDriverModal").modal('hide');
    };

    // Start the connection.
    $.connection.hub.start().done(function () {
    });
</script>
