@{
    ViewBag.Title = "Live Map";
}
<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="ibox-content p-xl">
                <div class="wrapper wrapper-content animated fadeInRight">
                    <div class="row">
                        <h2 class="dashboard-header-textes text-center">
                            Live Map
                        </h2>
                        <div class="row" style="margin-top: 40px;">
                            <div class="col-md-12">
                                <div id="businessLiveMap" style="width: 100%; height: 400px"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 40px;">
                        <div class="text-center">
                            <span >Refresh Map </span><button class="btn btn-default" id="refreshLiveMapBtn" title="Manually refresh the map"><span class="fa-repeat fa" title="Manually refresh the map"></span></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="txtLatitude" value="" />
<input type="hidden" id="txtLongitude" value="" />
@section Styles {
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/sweetAlertStyles")
    <style>
        .blockUI.blockOverlay {
            position: fixed !important;
        }
    </style>
}
@section Scripts
{
    @Scripts.Render("~/plugins/chartjs")
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/sweetAlert")

}
<style>
    #dvMap {
        width: 100%;
        height: 400px;
    }

    .divider {
        margin-left: 15px;
        border-bottom: 1px solid #808080;
    }
</style>
<script>
    var icons = {
        onlineRider: {
            url: "@Url.Content("~/Content/mapIcons/online-rider-icon.png")",
            size: new google.maps.Size(70, 70)
        },
        businessRider: {
            url: "@Url.Content("~/Content/mapIcons/business-rider-icon.png")",
            size: new google.maps.Size(70, 70)
        }
    };

    var businessAddress = '@ViewBag.BusinessAddress';
</script>
<script src="~/Scripts/app/Business/businessLiveMap.js"></script>
